<% if false %>
  <div class="container">
    <div class="row">
      <% @products.each_slice(4) do |product| %>
        <% product.each do |category| %>
          <div class="col-sm-3 col-md-3">
            <div class="card">
              <%= build_image_path(category.image) %>
              <div class="card-body">
                <h5 class="card-title"><%=category.item_name%></h5>
                <p class="card-text">Item: <%=category.item_number%></p>
                <p class="card-text">UPC: <%=category.item_upc%></p>
                <p class="card-text">Expiration: <%=category.item_expiration_date%></p>
                <p class="card-text">LOT Code: <%=category.item_lot_codes%></p>
                <a href="#" class="btn btn-primary">Go somewhere</a>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>

<!-- Start portfolio Area -->
  <div id="about" class="about-area area-padding">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
          <div class="section-headline text-center">
            <h2>Products</h2>
          <div>
        </div>
        Filters By Categories: <a class="btn btn-primary white-btn" style="margin: 0px 4px 3px 1px" href="/products"> <%= 'Reset Filters' %> </a>
        <div class="btn-group">
          <% @categories.each do |category|%>
            <% if @seleted_category_id == category.id.to_s  %>
              <a class="btn btn-primary btn-primary-design-color" style="margin: 0px 4px 3px 1px" href="/products?category_id=<%= category.id %>"> <%= category.name %> </a>
            <% else %>
              <a class="btn btn-primary white-btn" style="margin: 0px 4px 3px 1px" href="/products?category_id=<%= category.id %>"> <%= category.name %> </a>
            <% end %>
          <% end %>
        </div>
        <%= render partial: 'products/product' %>
      </div>
    </div>
  </div>